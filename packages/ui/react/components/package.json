{
  "name": "@cwa-ui/react-components",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "yarn clean && yarn build:type && yarn build:css && yarn build:js",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/styles.css",
    "build:js": "node build.js",
    "build:type": "tsc --emitDeclarationOnly",
    "dev:css": "tailwindcss -i ./src/index.css -o ./dist/styles.css --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@cwa-util/builder": "workspace:^",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
